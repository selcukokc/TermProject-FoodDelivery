<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txtMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Seçilmiş Menü (Dörtlü Fırsat Menüsü)"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtMenuDesc"
                android:layout_width="373dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:text="4 Adet King Chicken® + King Boy Patates Kızartması + 12’li Soğan Halkası + 1 L. İçecek"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMenuName" />

            <ImageButton
                android:id="@+id/imgBtnAdd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:background="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/txtNumberOfMenu"
                app:layout_constraintTop_toBottomOf="@+id/txtMenuDesc"
                app:srcCompat="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/txtMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="18dp"
                android:text="49.99 TL"
                android:textColor="@color/green"
                app:layout_constraintStart_toEndOf="@+id/imgBtnAdd"
                app:layout_constraintTop_toBottomOf="@+id/txtMenuDesc" />

            <TextView
                android:id="@+id/txtNumberOfMenu"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/imgBtnAdd"
                app:layout_constraintStart_toEndOf="@+id/imgBtnRemove"
                app:layout_constraintTop_toBottomOf="@+id/txtMenuDesc" />

            <ImageButton
                android:id="@+id/imgBtnRemove"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:background="#fff"
                app:layout_constraintEnd_toStartOf="@+id/txtNumberOfMenu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMenuDesc"
                app:srcCompat="@drawable/ic_baseline_remove_24" />

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:background="@drawable/rounded_background"
                android:text="Ekle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMenuDesc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>